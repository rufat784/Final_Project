@model VmBase
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->

<div class="content-page">
    <div class="content">
        <div class="container-fluid">

            <!-- Page Heading -->
            <!-- DataTales Example -->
            <h1 class="h3 mb-2 text-gray-800">Property List</h1>

            <div class="card shadow mb-4">

                <div class="card-body">
                    <div style="max-height:600px; overflow-y:auto" class="table-responsive">
                        <table  class="table table-bordered wraptable" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Agent</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Properties)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/Uploads/Images/@item.MainImage" alt="image" width="50" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.MyProfileForAgents.OwnerName</td>
                                        <td>@item.AddedDate.ToString("dd.MM.yyyy")</td>

                                        <td>
                                            <a style="margin-left:100px" class="btn btn-danger" asp-area="admin" asp-controller="properties" asp-action="deleteproperty" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                 }
                                <tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




