@model VmBase
@{
    ViewData["Title"] = "UpdateCity";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <h1 class="h3 mb-2 text-gray-800">Update City</h1>
                    <form asp-area="admin" asp-controller="properties" asp-action="updatecity" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" asp-for="@Model.Name" required value="@Model.Name.Name">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="image">Image</label>
                            <input class="form-control" id="image" asp-for="@Model.ImageFile" required>
                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                            <img src="~/Uploads/Images/@Model.Name.Image" height="80" />
                        </div>

                        <input type="hidden" name="Image" value="@Model.Name.Image" />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
