@model VmBase
@{
    ViewData["Title"] = "CreateCity";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <h1 class="h3 mb-2 text-gray-800">How It Works</h1>

                    <form asp-area="admin" asp-controller="home" asp-action="createhiw" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Icon</label>
                            <input type="text" class="form-control" id="title" asp-for="@Model.Icon" required>
                            <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" asp-for="@Model.Title" required>
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="title">Description</label>
                            <textarea type="text" class="form-control" id="title" asp-for="@Model.Desc" required></textarea>
                            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>









