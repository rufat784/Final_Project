@model VmBase
@{
    ViewData["Title"] = "CreateCity";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <h1 class="h3 mb-2 text-gray-800">Update About Section</h1>

                    <form asp-area="admin" asp-controller="home" asp-action="updateabout" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" asp-for="@Model.Title" required value="@Model.About.Title">
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="title">Description</label>
                            <textarea type="text" class="form-control" id="title" asp-for="@Model.Desc" required value="@Model.About.Desc"></textarea>
                            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="image">Image</label>
                            <input class="form-control" id="image" asp-for="@Model.ImageFile">
                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                            <img src="~/Uploads/Images/@Model.About.Image" height="80" />
                        </div>

                        <input type="hidden" name="Image" value="@Model.About.Image" />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




