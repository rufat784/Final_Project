    <script src="~/js/custom.js"></script>
    <script src="~/js/JavaScript.js"></script>

    <script>
            $("#custombtn").on("click", function (e) {
                e.preventDefault();

                let subscribe = {
                    "Email": $('#useremail').val(),
                    "Phone": $('#userphone').val(),
                    "Message": $('#usermessage').val(),
                }

                $.ajax({
                    type: "POST",
                    url: "@Url.ActionLink("Subscribe", "Home")",
                    data: subscribe,
                }).done(function (msg) {
                    console.log(msg);
                    $("input").val("");
                }).fail(function (msg) {
                    console.log(msg);
                });

            });

    </script>

</body>

</html>