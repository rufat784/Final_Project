@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor

@{ string agentCustomerString = HttpContextAccessor.HttpContext.Session.GetString("ValidAgentCustomer");
    MyProfileForAgents agents = null;
    if (agentCustomerString != null)
    {
        agents = JsonConvert.DeserializeObject<MyProfileForAgents>(agentCustomerString);

    }
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>Resido - Residence & Real Estate</title>

    <link href="~/css/styles.css" rel="stylesheet">
    <link href="~/css/custom.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/mobilenav.css" media="(max-width: 1000px)">


    <link href="~/css/colors.css" rel="stylesheet">

</head>

<body class="blue-skin">


    <div id="preloader"><div class="preloader"><span></span><span></span></div></div>

    <div id="main-wrapper">
        <div class="header header-light head-shadow">
            <div class="container">
                <nav id="navigation" class="navigation navigation-landscape">
                    <div class="nav-header">
                        <a class="nav-brand" asp-controller="home" asp-action="index">
                            <img src="~/image/logo.png" class="logo" alt="" />
                        </a>
                        <button style="padding-bottom:10px" class="nav-toggle"></button>
                    </div>
                    <div class="nav-menus-wrapper" style="transition-property: none;">
                        <ul class="nav-menu">

                            <li class="@(ViewBag.Page == "home" ? "active" : "")">
                                <a asp-controller="home" asp-action="index">Home<span class="submenu-indicator"></span></a>
                            </li>

                            <li class="@(ViewBag.Page == "about" ? "active" : "")">
                                <a asp-controller="about" asp-action="index">About Us<span class="submenu-indicator"></span></a>
                            </li>

                            <li class="@(ViewBag.Page == "properties" ? "active" : "")">
                                <a asp-controller="properties" asp-action="index">Properties<span class="submenu-indicator"></span></a>
                            </li>

                            <li class="@(ViewBag.Page == "agents" ? "active" : "")">
                                <a asp-controller="agents" asp-action="agents">Our Agents<span class="submenu-indicator"></span></a>
                            </li>
                            <li class="@(ViewBag.Page == "agencies" ? "active" : "")">
                                <a asp-controller="agents" asp-action="agencies">Our Agencies<span class="submenu-indicator"></span></a>
                            </li>

                            <li class="@(ViewBag.Page == "contacts" ? "active" : "")">
                                <a asp-controller="contacts" asp-action="index">Contact Us<span class="submenu-indicator"></span></a>
                            </li>

                        </ul>


                        @if (agents != null && agents.RegistrationOptionSelectId !=3) 
                        {
                                 <ul class="nav-menu nav-menu-social align-to-right">
                                      <li>
                                          <a asp-controller="account" asp-action="updatemyprofile" class="font-14 whitecolor hover-default" title="@agents.OwnerName"><i class="fas fa-user mr-2"></i></a>
                                      </li>
                                      <li>
                                          <a asp-controller="account" asp-action="logout"><img src="~/image/off.svg" class="mr-2" width="17" alt="" />Sign Out</a>
                                      </li>
                                      <li>
                                           <a asp-controller="properties" asp-action="submitproperty" class="text-success"><img src="~/image/submit.svg" width="20" alt="" class="mr-2" />Add Property</a>
                                      </li>
                                 </ul> 
                        }
                        else if (agents != null && agents.RegistrationOptionSelectId == 3)
                        {
                                 <ul class="nav-menu nav-menu-social align-to-right">
                                      <li>
                                          <a asp-controller="account" asp-action="updatemyprofile" class="font-14 whitecolor hover-default" title="@agents.OwnerName"><i class="fas fa-user mr-2"></i></a>
                                      </li>
                                      <li>
                                          <a asp-controller="account" asp-action="logout"><img src="~/image/off.svg" class="mr-2" width="17" alt="" />Sign Out</a>
                                      </li>
                                 </ul> 
                        }
                        else
                        {
                                <ul  class="nav-menu nav-menu-social align-to-right">
                                    <li>
                                         <a asp-controller="account" asp-action="signup">Sign Up<span class="submenu-indicator"></span></a>
                                    </li>
                                    <li class="add-listing">
                                         <a asp-controller="account" asp-action="login">Sign In<span class="submenu-indicator"></span></a>
                                    </li>
                                </ul>
                         }

                    

                    </div>
                </nav>
            </div>
        </div>
        <div class="clearfix"></div>






        @RenderBody()




        <section class="theme-bg call-to-act-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="call-to-act">
                            <div class="call-to-act-head">
                                <h3>Want to Become a Real Estate Agent?</h3>
                                <span>We'll help you to grow your career and growth.</span>
                            </div>
                            <a asp-controller="account" asp-action="signup" class="btn btn-call-to-act">SignUp Today</a>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <!-- ============================ Call To Action End ================================== -->
        <!-- ============================ Footer Start ================================== -->
