@model VmSignUp
@{
    ViewData["Title"] = "SignUp";
}

@{Layout = null; }
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>Resido - Residence & Real Estate</title>

    <link href="~/css/styles.css" rel="stylesheet">

    <link href="~/css/colors.css" rel="stylesheet">

</head>

<body class="blue-skin">


    <div id="preloader"><div class="preloader"><span></span><span></span></div></div>

    <div id="main-wrapper">
        <div class="header header-light head-shadow">
            <div class="container">
                <nav id="navigation" class="navigation navigation-landscape">
                    <div class="nav-header">
                        <a class="nav-brand" asp-controller="home" asp-action="index">
                            <img src="~/image/logo.png" class="logo" alt="" />
                        </a>
                        <div class="nav-toggle"></div>
                    </div>
                    <div class="nav-menus-wrapper" style="transition-property: none;">
                        <ul class="nav-menu">

                            <li class="@(ViewBag.Page == "home"?"active":"")">
                                <a asp-controller="home" asp-action="index"><i class="fas fa-chevron-left"></i>Back Home<span class="submenu-indicator"></span></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="clearfix"></div>




        <section  class="theme-bg call-to-act-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="call-to-act">
                            <div class="call-to-act-head">
                                <h3>Want to Become a Real Estate Agent?</h3>
                                <p>We'll help you to grow your career and growth.</p>
                                <!-- Log In -->
                                <div id="formstyle" style="margin-top:30px" class="container text-center">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="login-form">

                                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                                <form asp-controller="account" asp-action="signup" method="post">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <input type="text" asp-for="@Model.FullName" class="form-control" placeholder="Full Name">
                                                                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                                                    <i class="ti-user"></i>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Email">
                                                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                                                    <i class="ti-email"></i>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password">
                                                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                                                    <i class="ti-unlock"></i>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <input type="password" asp-for="@Model.ConfirmPass" class="form-control" placeholder="Confirm Pasword">
                                                                    <span asp-validation-for="@Model.ConfirmPass" class="text-danger"></span>
                                                                    <i class="ti-unlock"></i>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <input type="text" asp-for="@Model.Phone" class="form-control" placeholder="Phone">
                                                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                                                    <i class="lni-phone-handset"></i>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-6 col-md-6">
                                                            <div class="form-group">
                                                                <div class="input-with-icon">
                                                                    <select class="form-control" asp-for="@Model.RegistrationOptionSelectId" asp-items="@(new SelectList(ViewBag.RegistrationOption, "Id", "OptionSelect"))"></select>
                                                                    <span asp-validation-for="@Model.RegistrationOptionSelectId" class="text-danger"></span>
                                                                    <i class="ti-briefcase"></i>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div  class="form-group text-center">
                                                        <button style="background: #08184b; width: 180px" type="submit" class="btn btn-md rounded">Sign Up</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="text-center">
                                                <p class="mt-5"><i class="ti-user mr-1"></i>Already Have An Account? <a asp-controller="account" asp-action="login"onMouseOver="this.style.color='#0F0'"onMouseOut="this.style.color='#fd5332'" class="link">Go For LogIn</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Modal -->
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <!-- ============================ Footer Start ================================== -->
        <footer class="dark-footer skin-dark-footer">
            <div>
                <div class="container">
                    <div class="row">

                        <div class="col-lg-3 col-md-4">
                            <div class="footer-widget">
                                <img src="assets/img/logo-light.png" class="img-footer" alt="" />
                                <div class="footer-add">
                                    <p>Azerbaijan, Baku, Nobel pr. 147.</p>
                                    <p>+994517778997</p>
                                    <p>resido@gmail.com</p>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4">
                            <div class="footer-widget">
                                <h4 class="widget-title">Navigations</h4>
                                <ul class="footer-menu">
                                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                                    <li><a asp-controller="about" asp-action="index">About Us</a></li>
                                    <li><a asp-controller="properties" asp-action="index">Properties</a></li>
                                    <li><a asp-controller="contacts" asp-action="index">Contacts</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-4">
                            <div class="footer-widget">
                                <h4 class="widget-title">The Highlights</h4>
                                <ul class="footer-menu">
                                    <li><a asp-controller="agents" asp-action="agents">Our Agents</a></li>
                                    <li><a asp-controller="agents" asp-action="agencies">Our Agencies</a></li>
                                    <li><a target="_blank" href="https://www.tripadvisor.ru/Restaurants-g293934-Baku_Absheron_Region.html">Restaurant</a></li>
                                    <li><a target="_blank" href="https://www.likealocalguide.com/baku/nightclubs">Nightlife</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">Registration</h4>
                                <ul class="footer-menu">
                                    <li><a asp-controller="account" asp-action="signup">Sign Up</a></li>
                                    <li><a asp-controller="account" asp-action="login">Login</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">Download Apps</h4>
                                <a href="https://play.google.com/store/apps;" class="other-store-link">
                                    <div class="other-store-app">
                                        <div class="os-app-icon">
                                            <i class="lni-playstore theme-cl"></i>
                                        </div>
                                        <div class="os-app-caps">
                                            Google Play
                                            <span>Get It Now</span>
                                        </div>
                                    </div>
                                </a>
                                <a href="https://apps.apple.com/us/app/apple-store/id375380948" class="other-store-link">
                                    <div class="other-store-app">
                                        <div class="os-app-icon">
                                            <i class="lni-apple theme-cl"></i>
                                        </div>
                                        <div class="os-app-caps">
                                            App Store
                                            <span>Now it Available</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="container">
                    <div class="row align-items-center">

                        <div class="col-lg-6 col-md-6">
                            <p class="mb-0">© 2021 Resido. Designd By <a href="https://themezhub.com/">Themez Hub</a> All Rights Reserved</p>
                        </div>

                        <div class="col-lg-6 col-md-6 text-right">
                            <ul class="footer-bottom-social">
                                <li><a href="facebook.com/resido"><i class="ti-facebook"></i></a></li>
                                <li><a href="twitter.com/resido"><i class="ti-twitter"></i></a></li>
                                <li><a href="instagram.com/resido"><i class="ti-instagram"></i></a></li>
                                <li><a href="linkedin.com/resido"><i class="ti-linkedin"></i></a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </footer>
        

        <a id="back2Top" class="top-scroll" title="Back to top" href="#"><i class="ti-arrow-up"></i></a>


    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/rangeslider.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/slick.js"></script>
    <script src="~/js/slider-bg.js"></script>
    <script src="~/js/lightbox.js"></script>
    <script src="~/js/imagesloaded.js"></script>

    <script src="~/js/custom.js"></script>
    <script src="~/js/JavaScript.js"></script>



</body>

</html>