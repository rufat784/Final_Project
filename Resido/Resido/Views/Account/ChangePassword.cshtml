@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}


<div class="col-lg-12 col-md-12">
    <div class="dashboard-wraper">

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <form class="form-submit" asp-controller="account" asp-action="changepassword" method="post">
            <h4>Change Your Password</h4>
            <div class="submit-section">
                <div class="row">

                    <div class="form-group col-lg-12 col-md-6">
                        <label>Current Password</label>
                        <input type="password" asp-for="@Model.CurrentPassword" class="form-control" required>
                        <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group col-md-6">
                        <label> New Password</label>
                        <input type="password" asp-for="@Model.NewPassword" class="form-control" required>
                        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group col-md-6">
                        <label>Confirm Password</label>
                        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" required>
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group col-lg-12 col-md-12">
                        <button class="btn btn-theme-light-2 rounded" type="submit">Save Changes</button>
                    </div>

                </div>
            </div>
        </form>

    </div>
</div>