@model List<Subscribed>
@{ ViewData["Title"] = "Index"; }

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>My Messages</h1>
        </div>
        <div class="col-lg-12">
            @*<a class="btn btn-primary" asp-area="admin" asp-controller="account" asp-action="create">Create</a>*@
        </div>
    </div>
    <div class="card-body">
        <div class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Message</th>
                        <th scope="col">Date</th>


                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in Model)
                     {
                        i++;
                         <tr>

                        <th scope="row">@i</th>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Message</td>

                        <td>@item.AddedDate</td>
                            <td>
                                <a asp-controller="home" asp-action="deletemessage" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                         </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>







