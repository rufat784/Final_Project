@model List<PropertyImages>
@{ ViewData["Title"] = "Index"; }

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Property Images</h1>
        </div>
    </div>
    <div class="card-body">
        <div class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>

                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in Model)
                     {
                        i++;
                         <tr>

                          <th scope="row">@i</th>
                           <td>
                             <img src="~/Uploads/Images/@item.Image" alt="image" width="200" />
                           </td>
                           <td >
                              <a  style="margin-left:20px" class="btn btn-danger" asp-controller="properties" asp-action="deletepropertyimage" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')"><i class="fa fa-times" aria-hidden="true"></i></a>
                           </td>
                         </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>










