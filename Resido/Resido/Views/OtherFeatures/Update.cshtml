@model OtherFeatures
@{ ViewData["Title"] = "Update"; }

<div class="container">
    <div class="row">
        <div style="margin:20px" class="col-8">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form asp-controller="otherfeatures" asp-action="update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="title">Description</label>
                    <input type="text" class="form-control" id="title" asp-for="@Model.Desc">
                    <span asp-validation-for="@Model.Desc" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="title">Property Name</label>
                    <select class="form-control" asp-for="@Model.PropertyId" asp-items="@(new SelectList(ViewBag.props,"Id", "Name"))">
                    </select>
                    <span asp-validation-for="@Model.PropertyId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
</div>





